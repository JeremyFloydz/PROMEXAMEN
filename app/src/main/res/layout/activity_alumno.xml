<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Puedes declarar variables si es necesario -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.AlumnoActivity">

        <Button
            android:id="@+id/btnJugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugar" />

        <Button
            android:id="@+id/btnRellenarHuecos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rellenar Huecos" />

        <Button
            android:id="@+id/btnConsultarPuntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultar Puntos" />

    </LinearLayout>
</layout>
