<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Puedes declarar variables para Data Binding si es necesario -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        tools:context=".fragments.JuegoFragment">

        <!-- Elemento arrastrable -->
        <TextView
            android:id="@+id/draggableItem"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:text="Arrástrame"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <!-- Área donde se puede soltar el elemento -->
        <TextView
            android:id="@+id/dropTarget"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@android:color/holo_green_light"
            android:gravity="center"
            android:text="Suelta aquí"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="16dp" />

    </LinearLayout>
</layout>
