<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Si necesitas declarar variables para Data Binding, puedes hacerlo aquí -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".fragments.CrearGrupoFragment">

        <!-- Campo para el nombre del grupo -->
        <EditText
            android:id="@+id/etNombreGrupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del grupo" />

        <!-- Botón para crear el grupo -->
        <Button
            android:id="@+id/btnCrearGrupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Grupo"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</layout>
